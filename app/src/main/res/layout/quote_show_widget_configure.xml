<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:textColor="#636161"
        android:labelFor="@id/appwidget_text"
        android:text="@string/configure" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background2"
        android:hint="Write Your Quote Here"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/color1"
        app:hintTextColor="@color/color1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background2"
            android:drawableStart="@drawable/ic_baseline_edit_24"
            android:drawablePadding="20dp"
            android:inputType="textCapWords"
            android:paddingBottom="20dp"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_widget"
        android:background="@drawable/button_sign"
        android:layout_marginTop="15dp" />

</LinearLayout>