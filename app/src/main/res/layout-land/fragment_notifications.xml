<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_notification"
    tools:context=".ui.profile.NotificationsFragment">
        <ScrollView
            android:id="@+id/scrollable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/TextMyProfile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="16dp"
               android:layout_marginTop="24dp"
               android:background="@drawable/background_curve"
               android:drawablePadding="20dp"
               android:elevation="30dp"
               android:padding="10dp"
               android:text="My Profile"
               android:textColor="@color/black"
               android:textSize="20sp"
               app:drawableStartCompat="@drawable/ic_baseline_person_24" />


           <TextView
               android:id="@+id/textAllQuotes"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="16dp"
               android:layout_marginTop="24dp"
               android:background="@drawable/background_curve"
               android:drawablePadding="20dp"
               android:elevation="30dp"
               android:padding="10dp"
               android:text="My Saved Quotes"
               android:textColor="@color/black"
               android:textSize="20sp"
               app:drawableStartCompat="@drawable/ic_baseline_sticky_note_2_24" />


           <TextView
               android:id="@+id/TextMyFavourites"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="16dp"
               android:layout_marginTop="24dp"
               android:background="@drawable/background_curve"
               android:drawablePadding="20dp"
               android:elevation="30dp"
               android:padding="10dp"
               android:text="My Favourites"
               android:textColor="@color/black"
               android:textSize="20sp"
               app:drawableStartCompat="@drawable/ic_baseline_favorite_24"
               app:layout_constraintEnd_toEndOf="@id/guideline4"
               app:layout_constraintStart_toStartOf="@id/guideline3"
               app:layout_constraintTop_toBottomOf="@+id/textAllQuotes" />

           <TextView
               android:id="@+id/TextAbout_us"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="16dp"
               android:layout_marginTop="24dp"
               android:background="@drawable/background_curve"
               android:drawablePadding="20dp"
               android:elevation="30dp"
               android:padding="10dp"
               android:text="About Us"
               android:textColor="@color/black"
               android:textSize="20sp"
               app:drawableStartCompat="@drawable/ic_baseline_question_mark_24"
               app:layout_constraintEnd_toEndOf="@id/guideline4"
               app:layout_constraintStart_toStartOf="@id/guideline3"
               app:layout_constraintTop_toBottomOf="@+id/TextMyFavourites" />

           <!--    <TextView-->
           <!--        android:id="@+id/Rate_us"-->
           <!--        android:layout_width="0dp"-->
           <!--        android:layout_height="wrap_content"-->
           <!--        android:layout_marginHorizontal="16dp"-->
           <!--        android:layout_marginTop="24dp"-->
           <!--        android:background="@drawable/background_curve"-->
           <!--        android:drawablePadding="20dp"-->
           <!--        android:elevation="30dp"-->
           <!--        android:padding="10dp"-->
           <!--        android:text="Rate Us"-->
           <!--        android:textColor="@color/black"-->
           <!--        android:textSize="20sp"-->
           <!--        app:drawableStartCompat="@drawable/ic_baseline_star_24"-->
           <!--        app:layout_constraintEnd_toEndOf="@id/guideline4"-->
           <!--        app:layout_constraintStart_toStartOf="@id/guideline3"-->
           <!--        app:layout_constraintTop_toBottomOf="@+id/TextAbout_us" />-->

           <TextView
               android:id="@+id/TextFeedback"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="16dp"
               android:layout_marginTop="24dp"
               android:background="@drawable/background_curve"
               android:drawablePadding="20dp"
               android:elevation="30dp"
               android:padding="10dp"
               android:text="Feedback"
               android:textColor="@color/black"
               android:textSize="20sp"
               app:drawableStartCompat="@drawable/ic_baseline_feedback_24"
               app:layout_constraintEnd_toEndOf="@id/guideline4"
               app:layout_constraintStart_toStartOf="@id/guideline3"
               app:layout_constraintTop_toBottomOf="@+id/TextAbout_us" />
           <TextView
               android:id="@+id/TextLogout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="16dp"
               android:layout_marginTop="24dp"
               android:background="@drawable/background_curve"
               android:drawablePadding="20dp"
               android:elevation="30dp"
               android:padding="10dp"
               android:text="Logout"
               android:textColor="@color/black"
               android:textSize="20sp"
               app:drawableStartCompat="@drawable/ic_baseline_logout_24"
               app:layout_constraintEnd_toEndOf="@id/guideline4"
               app:layout_constraintStart_toStartOf="@id/guideline3"
               app:layout_constraintTop_toBottomOf="@+id/TextFeedback" />


       </LinearLayout>

        </ScrollView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />
</androidx.constraintlayout.widget.ConstraintLayout>